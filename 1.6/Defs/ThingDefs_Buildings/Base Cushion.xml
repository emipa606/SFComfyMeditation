<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="FurnitureWithQualityBase" Name="BaseMeditationCushion" Abstract="True">
    <drawGUIOverlay>true</drawGUIOverlay>
    <drawGUIOverlayQuality>false</drawGUIOverlayQuality>
    <rotatable>false</rotatable>
    <castEdgeShadows>True</castEdgeShadows>
    <altitudeLayer>Building</altitudeLayer>
    <category>Building</category>
    <size>(1,1)</size>
    <interactionCellOffset>(0,0,0)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <statBases>
      <MaxHitPoints>140</MaxHitPoints>
      <WorkToBuild>400</WorkToBuild>
      <Mass>10</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>10</Beauty>
      <Comfort>1</Comfort>
    </statBases>
    <socialPropernessMatters>true</socialPropernessMatters>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>
    <researchPrerequisites>
      <li>MeditationCushions</li>
    </researchPrerequisites>
    <pathCost>20</pathCost>
    <fillPercent>0.15</fillPercent>
    <ideoBuilding>true</ideoBuilding>
    <building>
      <isSittable>true</isSittable>
      <destroySound>BuildingDestroyed_Soft_Small</destroySound>
      <buildingTags>
        <li>RitualSeat</li>
      </buildingTags>
    </building>
    <uiIconScale>0.7</uiIconScale>
    <graphicData>
      <drawSize>1.4</drawSize>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_UsesMeditationFocus" />
      <li Class="CompProperties_AssignableToPawn">
        <drawUnownedAssignmentOverlay>false</drawUnownedAssignmentOverlay>
        <compClass>CompAssignableToPawn_MeditationSpot</compClass>
      </li>
      <li Class="CompProperties_RitualSeat" MayRequire="Ludeon.RimWorld.Ideology" />
    </comps>
    <placeWorkers>
      <li>PlaceWorker_MeditationSpot</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">PlaceWorker_RitualSeat</li>
    </placeWorkers>
    <modExtensions>
      <li Class="Meditation.BuildingExtension_MeditationOn" />
    </modExtensions>
  </ThingDef>
</Defs>
